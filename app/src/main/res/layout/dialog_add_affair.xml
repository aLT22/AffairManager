<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_sign_buttons">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/met_affair_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_sign_buttons"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Title" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/met_affair_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                android:inputType="none"
                android:padding="@dimen/padding_sign_buttons" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_sign_buttons">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/met_affair_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_sign_buttons"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Title" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/met_affair_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                android:inputType="none"
                android:padding="@dimen/padding_sign_buttons" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_sign_buttons">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/met_affair_object"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_sign_buttons"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Object" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/met_affair_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_sign_buttons"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Type" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/met_affair_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_sign_buttons"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Place" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_sign_buttons">

            <Spinner
                android:id="@+id/spinner_affair_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:entries="@array/affair_priorities"
                android:padding="@dimen/padding_sign_buttons" />

            <Spinner
                android:id="@+id/spinner_affair_repeats_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:entries="@array/affair_repeats_type"
                android:padding="@dimen/padding_sign_buttons" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_sign_buttons">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_sign_buttons" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>