<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_sign_buttons"
            android:orientation="horizontal">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/met_affair_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_sign_buttons"
                app:floating_label="Title"
                app:met_floating_label="highlight" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_affair_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="@dimen/padding_sign_buttons" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_sign_buttons">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/met_affair_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_sign_buttons"
                app:floating_lable="Description"
                app:met_floating_label="highlight" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_affair_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="@dimen/padding_sign_buttons" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>