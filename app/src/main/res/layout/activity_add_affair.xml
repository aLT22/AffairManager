<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding_sign_buttons"
            android:orientation="vertical"
            android:padding="@dimen/padding_sign_buttons">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/act_affair_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding_sign_buttons"
                android:padding="@dimen/padding_sign_buttons">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding_sign_buttons"
                    android:background="@null"
                    android:padding="@dimen/padding_sign_buttons"
                    android:textColor="@color/color_primary_text"
                    android:textSize="@dimen/edit_text_textsize_dialog"/>

            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding_sign_buttons"
                android:padding="@dimen/padding_sign_buttons">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/act_affair_date"
                    android:layout_width="@dimen/edit_text_width_dialog"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="@dimen/padding_sign_buttons"
                    android:padding="@dimen/padding_sign_buttons">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/padding_sign_buttons"
                        android:background="@null"
                        android:cursorVisible="false"
                        android:focusableInTouchMode="false"
                        android:inputType="none"
                        android:padding="@dimen/padding_sign_buttons"
                        android:textColor="@color/color_primary_text"
                        android:textSize="@dimen/edit_text_textsize_dialog"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/act_affair_time"
                    android:layout_width="@dimen/edit_text_width_dialog"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/padding_sign_buttons"
                    android:padding="@dimen/padding_sign_buttons">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/padding_sign_buttons"
                        android:background="@null"
                        android:cursorVisible="false"
                        android:focusableInTouchMode="false"
                        android:inputType="none"
                        android:padding="@dimen/padding_sign_buttons"
                        android:textColor="@color/color_primary_text"
                        android:textSize="@dimen/edit_text_textsize_dialog"/>

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/act_affair_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding_sign_buttons"
                android:padding="@dimen/padding_sign_buttons">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding_sign_buttons"
                    android:background="@null"
                    android:padding="@dimen/padding_sign_buttons"
                    android:textColor="@color/color_primary_text"
                    android:textSize="@dimen/edit_text_textsize_dialog"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/act_affair_object"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding_sign_buttons"
                android:padding="@dimen/padding_sign_buttons">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding_sign_buttons"
                    android:background="@null"
                    android:padding="@dimen/padding_sign_buttons"
                    android:textColor="@color/color_primary_text"
                    android:textSize="@dimen/edit_text_textsize_dialog"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/act_affair_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding_sign_buttons"
                android:padding="@dimen/padding_sign_buttons">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding_sign_buttons"
                    android:background="@null"
                    android:padding="@dimen/padding_sign_buttons"
                    android:textColor="@color/color_primary_text"
                    android:textSize="@dimen/edit_text_textsize_dialog"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/act_affair_place"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding_sign_buttons"
                android:padding="@dimen/padding_sign_buttons">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding_sign_buttons"
                    android:background="@null"
                    android:padding="@dimen/padding_sign_buttons"
                    android:textColor="@color/color_primary_text"
                    android:textSize="@dimen/edit_text_textsize_dialog"/>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_sign_buttons"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:padding="@dimen/padding_sign_buttons"
                android:paddingTop="@dimen/padding_sign_buttons">

                <Spinner
                    android:id="@+id/act_spinner_affair_priority"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding_sign_buttons"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_sign_buttons"
                    android:prompt="@string/spinner_prompt_priority"
                    android:spinnerMode="dialog"/>

                <Spinner
                    android:id="@+id/act_spinner_affair_repeats_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding_sign_buttons"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_sign_buttons"
                    android:prompt="@string/spinner_prompt_repeate_type"
                    android:spinnerMode="dialog"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding_sign_buttons"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:padding="@dimen/padding_sign_buttons">

                <Spinner
                    android:id="@+id/act_spinner_affair_repeats_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_sign_buttons"
                    android:padding="@dimen/padding_sign_buttons"
                    android:prompt="@string/spinner_prompt_repeate_time"
                    android:spinnerMode="dialog"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_decline"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/container"
            android:layout_margin="@dimen/padding_sign_buttons"
            android:background="@color/color_accent"
            android:padding="@dimen/padding_sign_buttons"
            android:text="@string/button_decline"
            android:textColor="@color/color_white"/>

        <Button
            android:id="@+id/button_accept"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button_decline"
            android:layout_alignBottom="@+id/button_decline"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/padding_sign_buttons"
            android:background="@color/color_accent"
            android:padding="@dimen/padding_sign_buttons"
            android:text="@string/button_accept"
            android:textColor="@color/color_white"/>

    </RelativeLayout>
</ScrollView>