<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_group_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_sign_buttons">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/padding_sign_buttons"
                android:background="@null"
                android:inputType="textCapWords"
                android:textColor="@color/color_primary_text"
                android:textSize="@dimen/edit_text_textsize_dialog"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_group_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/til_group_title"
            android:layout_margin="@dimen/padding_sign_buttons"
            android:layout_marginTop="@dimen/padding_sign_buttons">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/padding_sign_buttons"
                android:background="@null"
                android:inputType="textCapWords"
                android:textColor="@color/color_primary_text"
                android:textSize="@dimen/edit_text_textsize_dialog"/>

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

</LinearLayout>