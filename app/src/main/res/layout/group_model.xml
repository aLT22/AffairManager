<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/group_container"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
        android:id="@+id/group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_sign_buttons"
        android:padding="@dimen/padding_sign_buttons"
        android:textColor="@color/color_primary_text"
        android:textSize="@dimen/material_text_title"
        tools:text="Group title"/>

    <TextView
        android:id="@+id/group_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_sign_buttons"
        android:textColor="@color/color_primary_text"
        android:textSize="@dimen/material_text_body1"
        app:layout_constraintTop_toBottomOf="@id/group_title"
        tools:text="Group description"/>

    <TextView
        android:id="@+id/group_creator_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_sign_buttons"
        android:layout_marginTop="@dimen/padding_sign_buttons"
        android:padding="@dimen/padding_sign_buttons"
        android:textColor="@color/color_secondary_text"
        app:layout_constraintTop_toBottomOf="@id/group_description"
        tools:text="Group creator login"/>

</android.support.constraint.ConstraintLayout>