<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/affair_model_container"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_affair_model"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/affair_model_date"
            android:layout_marginLeft="@dimen/padding_sign_buttons"
            android:layout_marginRight="@dimen/padding_sign_buttons"/>

        <TextView
            android:id="@+id/affair_model_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/civ_affair_model"
            android:layout_toRightOf="@+id/civ_affair_model"
            android:ellipsize="start"
            android:maxLength="15"
            android:maxLines="1"
            android:minLines="1"
            android:padding="@dimen/padding_sign_buttons"
            android:text="Description"/>

        <TextView
            android:id="@+id/affair_model_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/civ_affair_model"
            android:layout_toLeftOf="@+id/affair_model_date"
            android:layout_toRightOf="@+id/civ_affair_model"
            android:ellipsize="start"
            android:maxLength="15"
            android:maxLines="1"
            android:minLines="1"
            android:padding="@dimen/padding_sign_buttons"
            android:text="Title"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/affair_model_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/affair_model_date"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/affair_model_date"
            android:padding="@dimen/padding_sign_buttons"
            android:text="Time"/>

        <TextView
            android:id="@+id/affair_model_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/affair_model_title"
            android:layout_alignBottom="@+id/affair_model_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:padding="@dimen/padding_sign_buttons"
            android:text="Date"/>

    </RelativeLayout>

</RelativeLayout>